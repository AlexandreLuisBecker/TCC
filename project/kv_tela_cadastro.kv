#encoding: -*- utf-8 -*-
# ------------------------------------------------- #
# --- Tela de Cadastro
# ------------------------------------------------- # 
  
# --- Tela de Cadastro --- #
<TCadastro>: 
	name: 'tcadastro'
    # --- Tela completa --- #
    FloatLayout:
        canvas:
			Color:
				#rgba: (0.04, 0.15, 0.26, 1)
			Rectangle:
				pos: self.pos
				size: self.size
				source: self.background_down
        background_down: '../assets/ImagesApp/Azul2.png' 
        
        # --- Barra Superior --- #
        FloatLayout:
            pos_hint: {'x': 0, 'top': 1}
			size_hint: (1, .1) 
            ModeloLbTitulo:
				text: 'Cadastro'

			ModeloBtn:
				pos_hint: {'x': .05, 'top': .955}
				size_hint: (.10, .6)
				text: 'Home'
				on_release: app.root.current = 'tprincipal'
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'    

        # --- Formulario de Cadastro --- #
        FloatLayout:
			id: formulario
			# canvas:
			# 	Color:
			# 		rgba: (0, 0, 0, .2)
			# 	Rectangle:
			# 		pos: self.pos
			# 		size: self.size
			pos_hint: {'x': .05, 'top': .85}
			size_hint: (0.40, 0.60)

            # ----- Nome----- #
            Label: 
                id: lbl_01
				pos_hint: {'x': 0, 'top': .9}
				size_hint: (.3, .05)
				padding: (1, 0)
				text_size: root.width-20, 20 
				halign: 'left'
				text: 'Name'
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'
                font_size: 18

            TextInput:
                id: login
                multiline:False
                font_size: 15 
				focus: True
				background_color: (0.96, 0.93, 0.73, 1) if self.focus else (0.83, 0.94, 1, 1)
				pos_hint: {'x': 0, 'top': .85}
				size_hint: (.90, .08)
				cursor_blink: True
				hint_text: 'Nome'
				multiline: False
				write_tab: False
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'

			  # ----- CPF ----- #
            Label:
                text: 'CPF'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20 
                id: lbl_02
				pos_hint: {'x': 0, 'top': .3}
				size_hint: (.3, .05)
				padding: (1, 0) 
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'

            TextInput:
                id: cpf
                multiline:False
                font_size: 15 
				background_color: (0.96, 0.93, 0.73, 1) if self.focus else (0.83, 0.94, 1, 1)
				pos_hint: {'x': 0, 'top': .25}
				size_hint: (.90, .08)
				cursor_blink: True
				hint_text: 'CPF' 
				write_tab: False
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'
         
            # ----- CARGO ----- # 
            Label:
                text: 'Cargo'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20 
                id: lbl_03
				pos_hint: {'x': 0, 'top': .7}
				size_hint: (.3, .05)
				padding: (1, 0) 
				halign: 'left' 
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'

            TextInput:
                id: identificador
                multiline:False
                font_size: 15 
				background_color: (0.96, 0.93, 0.73, 1) if self.focus else (0.83, 0.94, 1, 1)
				pos_hint: {'x': 0, 'top': .65}
				size_hint: (.90, .08)
				cursor_blink: True
				hint_text: 'Tipo Usuario' 
				write_tab: False
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'

            # ----- EMAIL ----- # 
            Label:
                text: 'Email'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20 
                id: lbl_04
				pos_hint: {'x': 0, 'top': .5}
				size_hint: (.3, .05)
				padding: (1, 0) 
				halign: 'left' 
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'

            TextInput:
                id: email
                multiline:False
                font_size: 15 
				background_color: (0.96, 0.93, 0.73, 1) if self.focus else (0.83, 0.94, 1, 1)
				pos_hint: {'x': 0, 'top': .45}
				size_hint: (.90, .08)
				cursor_blink: True
				hint_text: 'E-mail' 
				write_tab: False
				outline_width: 1
                outline_color: [0,0,0]
	            font_name: 'RobotoMono-Regular'
        # --- Layout de captura de imagem --- #
		GridLayout:
			cols: 4
			rows: 4
			id: camera_layout
			canvas:
				Color:
					rgba: (0, 0, 0, .2)
				Rectangle:
					pos: self.pos
					size: self.size
			pos_hint: {'x': .55, 'top': .85}
			size_hint: (0.40, 0.60)

        # --- Barra Inferior --- #
        FloatLayout:
			pos_hint: {'x': 0, 'y': .1}
			size_hint: (1, .1)

            # --- Btn para  --- #
            ModeloBtn:
                pos_hint: {'x': .05, 'top': .80}
                size_hint: (.10, .6)
                text: 'Foto' 
                on_press: root.register_foto()
                outline_width: 1
                outline_color: [0,0,0]
                font_name: 'RobotoMono-Regular' 
				
			# --- Btn para  --- #   
            ModeloBtn:
                
                pos_hint: {'x': .35, 'top': .80}
                size_hint: (.10, .6)
                text: 'Cadastrar' 
                on_press: root.insert_values_in_dabatase()
                outline_width: 1
                outline_color: [0,0,0]
                font_name: 'RobotoMono-Regular' 	
        
